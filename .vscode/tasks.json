{
    
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build my program",
            "type": "shell",
            "command": "cc",
            "args": [
                "-Wall",
                "-Wextra",
                "-Werror",
                "tester.c",
                "-L.",
				"-lbsd",
				"-lft",
                "-o",
                "my_program"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}
